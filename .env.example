# ==========================================
# TTS Voice Agent - Configuration Template
# Copy this to .env and update values
# ==========================================

# Application Info
APP_NAME=TTS Voice Agent
APP_VERSION=1.0.0
ENVIRONMENT=development

# Supported Languages
SUPPORTED_LANGUAGES=en,ur

# File Upload Limits
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,docx,png,jpg,jpeg,bmp,tiff

# Audio Settings
AUDIO_FORMAT=mp3
AUDIO_SAMPLE_RATE=24000
AUDIO_OUTPUT_DIR=./assets

# TTS Engine Settings
TTS_ENGINE=edge
TTS_VOICE_EN=en-US-AriaNeural
TTS_VOICE_UR=ur-PK-AsadNeural

# API Keys (Optional - Only needed for premium TTS services)
OPENAI_API_KEY=your_openai_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Flask Server Settings
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=True

# OCR Settings
OCR_ENGINE=easyocr
OCR_LANGUAGES=en,ur

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log